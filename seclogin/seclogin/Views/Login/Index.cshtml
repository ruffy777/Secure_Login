@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/LoginSite.css" asp-append-version="true" />


<div class="login-container">
    <h2>Login</h2>
    <form action="/login" method="post">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="email" class="form-control" id="email" name="username" placeholder="Enter username" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
        </div>
        <label class="switch">
            <input type="checkbox">
            <span class="slider round"></span>
        </label>
        <button type="submit" class="btn btn-primary" onclick="loginPost(event)">Login</button>
    </form>
</div>